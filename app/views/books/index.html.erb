<div class="page-header">
  <h1>書籍 : <%= @books.first.category.name %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>著者</th>
      <th>値段</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to (image_tag book.icon_path), book %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= yen book.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
