<%= form_for @cart, html: { class: 'form-horizontal' } do |f| %>

  <% if @cart.errors.any? %>
    <div id="error_explanation">
      <h2><%= @cart.errors.count %>つの入力間違いがあります:</h2>

      <ul>
      <% @cart.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :book_id, class: 'control-label' %>
    <div class="controls">
      <%= @cart.book.title %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity, class: 'control-label' %>
    <div class="controls">
      <%= f.number_field :quantity, class: 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to "戻る", carts_path, class: 'btn' %>
  </div>
<% end %>
